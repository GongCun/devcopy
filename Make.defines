# Common make definitions.

CC = gcc
LDDIR = $(ROOT)/lib
LIBMYLIB = $(LDDIR)/libmylib.a
LDFLAGS = -L$(LDDIR) 
LDLIBS = -lmylib $(EXTRALIBS)
CFLAGS = -g -Wall -Wextra $(EXTRA)
COMPILE.c = $(CC) $(CFLAGS) $(CPPFLAGS) -c
LINK.c = $(CC) $(CFLAGS) $(LDFLAGS)
AR = ar
RANLIB = ranlib
TEMPFILES = core core.* *.o temp.* *.out *~

